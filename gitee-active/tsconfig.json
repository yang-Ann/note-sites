{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": "./",
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "declaration": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": true,
    "watch": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts"
, "src/index.txt"  ],
  "files": [
    "./src/types/index.d.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}